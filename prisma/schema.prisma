// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Author {
  id    Int     @id @default(autoincrement())
  name  String
  email String  @unique
  image String?
  books Book[]
}

model Publisher {
  id    Int    @id @default(autoincrement())
  name  String
  email String @unique
  phone String
  books Book[]
}

model Library {
  id      Int    @id @default(autoincrement())
  name    String
  address String
  email   String @unique
  phone   String
  books   Book[]
}

model Book {
  id                 Int       @id @default(autoincrement())
  asin               String
  ISBN10             String
  author             Author[]
  currency           String
  description        String
  final_price        Float?
  format             Json
  image_url          String
  images_count       Int
  item_weight        String
  product_dimensions String
  rating             String
  reviews_count      Int
  publisher          Publisher @relation(fields: [publisher_id], references: [id])
  publisher_id       Int
  title              String
  url                String
  categories         String[]
  libraries          Library[]
}
